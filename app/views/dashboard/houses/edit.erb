<h1>Edit House</h1>

<form action="/dashboard/houses/<%= @house.id %>" method="POST">
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <td style="width: 1%; white-space:nowrap; text-align: right;">Name:</td>
            <td><input type="text" name="house[name]" class="form-control" value="<%= @house.name %>" /></td>
        </tr>
        <tr>
            <td style="width: 1%; white-space:nowrap; text-align: right;">Founder:</td>
            <td><input type="text" name="house[founder]" class="form-control" value="<%= @house.founder %>" /></td>
        </tr>
        <tr>
            <td style="width: 1%; white-space:nowrap; text-align: right;">Head Master:</td>
            <td><input type="text" name="house[head_master]" class="form-control" value="<%= @house.head_master %>" /></td>
        </tr>
    </table>
    <input type="hidden" name="_method" value="PATCH" />
    <input type="submit" class="btn btn-warning btn-block" value="Edit House" />
</form>